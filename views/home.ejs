<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Welcome to URLShortner</h1>
  <% if (locals.id) { %>
   <p>URL Generated: http://localhost:3000/url/<%= id %></p>
  <% } %>
  <div>
    <form action="/url" method="post">
      <label for="url">Enter your url</label>
      <input type="text" name="url" id="url" placeholder="https://www.example.com">
      <button type="submit">Submit</button>
    </form>
  </div>
  <div>
    <% if (locals.urls) { %>
      <table>
        <thead>
          <th>S. No</th>
          <th>ShortURL</th>
          <th>Redirected URL</th>
          <th>Total clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortURL %></td>
              <td><%= url.redirectedURL %> </td>
              <td><%= url.urlAnalytics.length %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>